.dropdown
	.btn-group{:class => "post_settings"}
		%a{:class=>"dropdown-toggle btn-small", :"data-toggle" => "dropdown", :href =>"#"} 
			%i{:class => "icon-cog"}
			%span{:class=>"caret"}
		%ul{:class => "dropdown-menu"}
			%li
				%a{:tabindex => "-1", :href =>"/memory/#{qid}"} 
					%i{:class => "icon-pencil"}
					&nbspEdit
			%li
				- published = post["state"] =='published'
				%a{:tabindex => "-1", :href =>"/memory/#{qid}/toggle_publish?state=#{published ? 'private' : 'published'}"} 
					%i{:class => "icon-repeat"}
					&nbsp 
					= published ? 'Turn to Draft' : 'Publish'
			%li
				%a{:tabindex => "-1", :href =>"/memory/#{qid}/delete"}
					%p{:class => "text-error"} 
						%i{:class => "icon-remove"}
						&nbspDelete